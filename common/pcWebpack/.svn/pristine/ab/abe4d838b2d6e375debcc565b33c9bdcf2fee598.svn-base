import Vue from 'vue'
import Router from 'vue-router'
import jsRes from '@/assets/js/res.js'

Vue.use(Router)

const routePath = [{
    path: '/',
    name: 'login',
    component: () => import('@/views/login'),
  },
  {
    path: '/404',
    component: () => import('@/views/404'),
    hidden: true
  },
  // 404 page must be placed at the end !!!
  { path: '*', redirect: '/404'}
];

const createRouter = (path) => new Router({
  // mode: 'history', // require service support
  scrollBehavior: () => ({
    y: 0
  }),
  routes: path
})

const router = createRouter(routePath)

let val = jsTools.SessionStorage.getVal('menuPos');

resetRouter(val);

export default router

export function resetRouter(menuPos) {
  if(menuPos == null) return;
  jsTools.SessionStorage.setVal('menuPos',menuPos);
  let menus = jsRes.managerMenu(jsRes.loginUser());
  let path = [];

  routePath.forEach((item)=>{
    path.push(item);
  })

  // path.push({
  //   path: '/layout',
  //   name: 'layout',
  //   redirect: '/layout' + menuPos,
  // });

  // path.push({
  //   path: '/layout' + menuPos,
  //   name: 'layout' + menuPos,
  //   component: () => import('../views/layout' + menuPos),
  // });

  menus.forEach(element => {
    let item = {
      path: '/' + element.dir,
      name: element.dir,
      component: () => import('../views/layout' + menuPos),
      meta: {
        title: element.name,
        icon: element.icon
      },
      children: []
    }

    element.list.forEach(li => {
      item.children.push({
        path: li.href,
        name: li.href,
        component: () => import('@/views/wllh/' + element.dir + '/' + li.href),
        meta: {
          title: li.name
        }
      })
    })

    path.push(item);
  });

  console.log(path);

  const newRouter = createRouter(path);
  router.matcher = newRouter.matcher      // reset router
  router.options.routes = path;
}


